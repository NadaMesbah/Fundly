<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".FundlyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FundlyTest">

        <!-- Main Activity with navigation -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FundlyTest">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Transactions Activity (with navigation) -->
        <activity
            android:name=".activities.TransactionsActivity"
            android:exported="false"
            android:theme="@style/Theme.FundlyTest" />

        <!-- Reports Activity (with navigation) -->
        <activity
            android:name=".activities.ReportsActivity"
            android:exported="false"
            android:theme="@style/Theme.FundlyTest" />

        <!-- Add Transaction Activity (NO navigation) -->
        <activity
            android:name=".activities.AddTransactionActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <!-- Add Category Activity (NO navigation) -->
        <activity
            android:name=".activities.AddCategoryActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <!-- Transaction Detail Activity (NO navigation) -->
        <activity
            android:name=".activities.TransactionDetailActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

    </application>

</manifest>