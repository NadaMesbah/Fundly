<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>

    <application
        android:name=".FundlyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FundlyTest">

        <!-- Welcome Activity - Page de dÃ©marrage -->
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.FundlyTest">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.FundlyTest" />

        <!-- Register Activity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.FundlyTest" />

        <!-- Home Activity (nouvelle page d'accueil avec navigation) -->
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.FundlyTest" />




        <!-- Transactions Activity (with navigation) -->
        <activity
            android:name=".activities.TransactionsActivity"
            android:exported="false"
            android:theme="@style/Theme.FundlyTest" />

        <!-- Reports Activity (with navigation) -->
        <activity
            android:name=".activities.ReportsActivity"
            android:exported="false"
            android:theme="@style/Theme.FundlyTest" />

        <!-- Add Transaction Activity (NO navigation) -->
        <activity
            android:name=".activities.AddTransactionActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <!-- Add Category Activity (NO navigation) -->
        <activity
            android:name=".activities.AddCategoryActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <!-- Transaction Detail Activity (NO navigation) -->
        <activity
            android:name=".activities.TransactionDetailActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />


        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activities.LoginDetailsActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
    </application>

</manifest>