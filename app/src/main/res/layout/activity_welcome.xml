<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_card_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <View
        android:id="@+id/card_bottom"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_glass_card"
        android:rotation="-25"
        android:alpha="0.4"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_card_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_card_center" />

    <RelativeLayout
        android:id="@+id/card_middle"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_glass_card"
        android:rotation="-25"
        android:alpha="0.7"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/card_bottom"
        app:layout_constraintEnd_toEndOf="@id/card_bottom"
        app:layout_constraintStart_toStartOf="@id/card_bottom"
        app:layout_constraintTop_toTopOf="@id/card_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISA"
            android:textStyle="italic|bold"
            android:textColor="#CCFFFFFF"
            android:textSize="22sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_top"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_glass_card"
        android:rotation="-25"
        android:elevation="10dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@id/card_middle"
        app:layout_constraintEnd_toEndOf="@id/card_middle"
        app:layout_constraintStart_toStartOf="@id/card_middle"
        app:layout_constraintTop_toTopOf="@id/card_middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** **** ****"
            android:textColor="#AAFFFFFF"
            android:letterSpacing="0.2"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOHSEN JAMALI"
            android:textAllCaps="true"
            android:textColor="#AAFFFFFF"
            android:textSize="10sp"
            android:layout_marginTop="55dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISA"
            android:textStyle="italic|bold"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The Best App to\nmanage your\nmoney"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:lineSpacingExtra="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_get_started"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_started"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/btn_outline"
        android:text="Get Started"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:textSize="16sp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>